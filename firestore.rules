rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper Functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      // In a real app, use custom claims or check against an admins collection
      // For this Phase, we check the 'role' field in the 'users' document
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function getRole() {
       return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isStudent() {
      return getRole() == 'student';
    }

    function isCompany() {
      return getRole() == 'company';
    }

    // --- Users Collection ---
    match /users/{userId} {
      allow read: if isAuthenticated(); // Authenticated users can read basic info
      allow create: if isOwner(userId); // Users create their own record on signup
      
      // Update: Owner can update profile, BUT CANNOT CHANGE ROLE. Admin can change everything.
      // We check that 'role' is not being modified if user is just Owner (not Admin).
      allow update: if isAdmin() || (isOwner(userId) && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']));
      
      allow delete: if isAdmin();
    }

    // --- Students Collection ---
    match /students/{userId} {
      allow read: if isAuthenticated(); // Companies need to see profiles
      allow write: if isOwner(userId) || isAdmin();
    }

    // --- Companies Collection ---
    match /companies/{userId} {
      allow read: if isAuthenticated();
      allow update: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId) || isAdmin(); // Created on invite registration
    }

    // --- Job Postings ---
    match /jobPostings/{jobId} {
      // Public if published, otherwise only owner company or admin
      allow read: if resource.data.status == 'published' || 
                  (isAuthenticated() && resource.data.companyId == request.auth.uid) || 
                  isAdmin();
                  
      // Only company (owner) or admin can write
      allow create: if (isCompany() && request.resource.data.companyId == request.auth.uid) || isAdmin();
      allow update: if (isCompany() && resource.data.companyId == request.auth.uid) || isAdmin();
      allow delete: if isAdmin(); // Companies generally shouldn't delete, only close
    }

    // --- Applications ---
    match /applications/{applicationId} {
      // Student (owner), Target Company, or Admin can read
      allow read: if isOwner(resource.data.studentId) || 
                  (isAuthenticated() && resource.data.companyId == request.auth.uid) || 
                  isAdmin();
      
      // Student creates application
      allow create: if isStudent() && request.resource.data.studentId == request.auth.uid;
      
      // Updates (Status changes)
      allow update: if isAuthenticated() && (
        resource.data.studentId == request.auth.uid || 
        resource.data.companyId == request.auth.uid || 
        isAdmin()
      );
    }

    // --- Matches ---
    match /matches/{matchId} {
      allow read: if isAuthenticated() && (
        resource.data.studentId == request.auth.uid || 
        resource.data.companyId == request.auth.uid || 
        isAdmin()
      );
      // Student creates when accepting offer
      allow create: if isAuthenticated() && request.resource.data.studentId == request.auth.uid;
      // Company updates (completes) or Admin
      allow update: if isAuthenticated() && (
        resource.data.companyId == request.auth.uid ||
        isAdmin()
      );
    }

    // --- Daily Reports ---
    match /dailyReports/{reportId} {
      allow read: if isAuthenticated() && (
        // Read: Owner (Student), Admin, or explicitly authorized Company (via match)
        resource.data.studentId == request.auth.uid ||
        isAdmin() ||
        // For Company: Ideally check if request.auth.uid is the companyId in the related 'matches' doc.
        // Since we can't easily join, we rely on the fact that companies only know reportIds if they are relevant,
        // AND we enforce that they must be a 'company' role.
        // This prevents random students from enumerating reports if we use random IDs (Firestore IDs are random).
        // For stricter security, we should store 'companyId' on the report doc.
        isCompany()
      );
      allow create: if isStudent() && request.resource.data.studentId == request.auth.uid;
      allow update: if isAuthenticated() && (
        resource.data.studentId == request.auth.uid || 
        isAdmin() ||
        // Company adding comment
        isCompany() 
      );
    }
    
    // --- Notifications ---
    match /notifications/{notificationId} {
      // Recipient can read
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      // Anyone authenticated can create (System/User actions trigger notifications for others)
      allow create: if isAuthenticated();
      // Recipient can update (mark as read)
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // --- Evaluations ---
    match /evaluations/{evalId} {
      allow read: if isAuthenticated() && (
        resource.data.fromId == request.auth.uid ||
        resource.data.toId == request.auth.uid ||
        isAdmin()
      );
      // Creator must be the signer
      allow create: if isAuthenticated() && request.resource.data.fromId == request.auth.uid;
    }
  }
}
